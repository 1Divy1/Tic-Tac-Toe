<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="406dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.566">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="121dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="button1"
                android:backgroundTint="#007BFF"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="button2"
                android:backgroundTint="#007BFF"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="button3"
                android:backgroundTint="#007BFF"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="button4"
                android:backgroundTint="#007BFF"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="button5"
                android:backgroundTint="#007BFF"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="button6"
                android:backgroundTint="#007BFF"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="button7"
                android:backgroundTint="#007BFF"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="button8"
                android:backgroundTint="#007BFF"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="button9"
                android:backgroundTint="#007BFF"
                tools:ignore="SpeakableTextPresentCheck" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="127dp"
        android:layout_height="62dp"
        android:onClick="buttonReset"
        android:text="@string/reset_button"
        android:textSize="27sp"
        android:backgroundTint="#0BDD04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <TextView
        android:id="@+id/Jucator0TextView"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        android:text="@string/player0"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.782"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/player0score"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toEndOf="@+id/Jucator0TextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/JucatorXTextView"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:text="@string/playerX"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/playerXscore"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toEndOf="@+id/JucatorXTextView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>